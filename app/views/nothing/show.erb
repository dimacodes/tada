<p>Nothing: <%= @nothing.no_title %> </p>
<% if @nothing.user_id == session[:user_id] %>


<form method="GET" action="/nothing/<%=@nothing.id%>/edit">
    <input class='btn btn-primary' type='submit' value='Edit Nothing'>
</form>

<form method="POST" action="/nothing/<%=@nothing.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Nothing">
</form>


<% @nothing.somethings.each do |something| %>
<p>Something: <%= something.some_title %></p>
<form method="GET" action="/something/<%=something.id%>/edit">
<input class='btn btn-primary' type='submit' value='Edit Something'>
</form>
<form method="POST" action="/something/<%=something.id%>/delete">
<input id="hidden" type="hidden" name="_method" value="DELETE">
<input type="submit" value="Delete something">
</form>
<% end %>

<br>

<form method='POST' action='/something/new'>
  <input id="hidden" type="hidden" name="nothing_id" value="<%=@nothing.id%>">

  <% unless locals.empty? %>
  <%= message %>
  <% end %><br>

  Add Something to Nothing: <input type="text" name="some_title">
  <button type="submit" value="submit">Click Here</button>
</form>
<% end %>

<br></br>

<form method="get" action="/nothing">
    <button type="submit" value="submit">Home</button>
</form>

<form method="get" action="/logout">
    <button type="submit" value="submit">Log Out</button>
</form>
